{
  "$schema": "https://deno.land/x/deno@v2.5.4/cli/schemas/config-file.v1.json",
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "VITE_ROUTINE_API_BASE_URL=http://localhost:8081/v1 VITE_USE_MOCK_AUTH=true VITE_ROUTINE_DATA_MODE=backend deno run -A npm:vite",
    "dev_f": "VITE_ROUTINE_API_BASE_URL=http://localhost:8081/v1 VITE_USE_MOCK_AUTH=false VITE_ROUTINE_DATA_MODE=firestore deno run -A npm:vite",
    "build": "deno run -A npm:vite build",
    "preview": "deno run -A npm:vite preview",
    "lint": "deno run -A npm:eslint ."
  },
  "fmt": {
    "include": [
      "src/",
      "vite.config.ts",
      "deno.json",
      "README.md"
    ]
  }
}
