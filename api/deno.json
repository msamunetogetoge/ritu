{
  "$schema": "https://deno.land/x/deno@v2.5.4/cli/schemas/config-file.v1.json",
  "imports": {
    "hono": "npm:hono@^4.11.0",
    "@std/log": "jsr:@std/log@^0.224.14",
    "@std/fmt": "jsr:@std/fmt@^1.0.8"
  },
  "tasks": {
    "start": "deno run --allow-env --allow-net --allow-read main.ts",
    "dev": "PORT=8081 ROUTINE_REPOSITORY=memory deno run --env-file --watch --allow-env --allow-net --allow-read main.ts",
    "dev_f": "PORT=8081 ROUTINE_REPOSITORY=firestore deno run --env-file --watch --allow-env --allow-net --allow-read main.ts",
    "test": "deno test --allow-env --allow-net --allow-read",
    "build": "deno check main.ts"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "useTabs": false
  }
}
